<div style="text-align: right; margin: 30px 0 10px">
	<a href="/dashboard" style="text-decoration: underline"
		>&larr; Back to dashboard</a
	>
</div>

<div class="admin-title" style="margin-bottom: 30px">
	<h2>View / Edit Post</h2>

	<form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
		<input type="submit" value="Delete Post" class="btn-delete btn" />
	</form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
	<label for="title"><b>Post Title</b></label>
	<input
		type="text"
		placeholder="Post title"
		name="title"
		value="<%= data.title %>"
	/>

	<label for="body"><b>Post Content</b></label>
	<textarea name="body" cols="50" rows="6" placeholder="Post content...">
<%= data.body %>
  </textarea>

	<input type="submit" value="Update" class="btn" />
</form>
